<div id="dashboard">
  <div class="container py-5">
    <div class="row">
      <div class="col-md-6">
        <h2>Resume Unfinished Exercices</h2>
        <ul class="list-unstyled">
          <% @unfinished_exercices.each do |unfinished_exercice| %>
