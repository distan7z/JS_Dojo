<br>
<div class="parent">
  <div class="lastplayed">
      <div class="card-product d-flex">
        <h2>Resume last exercise</h2>
        <% if @last_unfinished_submission %>
          <%= link_to @last_unfinished_submission.exercice.title, edit_exercice_submission_path(@last_unfinished_submission.exercice, @last_unfinished_submission) %>
          <p><%= @last_unfinished_submission.exercice.instructions %></p>
        <% end %>
      </div>
  </div>
  <div class="currentxp">
    <h2>Total Wins</h2>
      <p><%= @total_wins %> games won</p>
    <h2>Ranking</h2>
      <p><%= @current_user_rank %></p>
    <h2>Total XP</h2>
      <p><%= current_user.exp %></p>
    <h2>Today's Streak</h2>
      <% if @streak == 0 %>
        <p>Start a new exercise and try to get the highest streak!</p>
      <% else %>
        <%= @streak %>
      <% end %>
  </div>
  <div class="streams">
    <h2>Featured Streams</h2>
      <iframe src="https://player.twitch.tv/?channel=elysiagriffin&parent=localhost&autoplay=false" frameborder="0" allowfullscreen="true" scrolling="no" height="189" width="310"></iframe>
  </div>
  <div class="random">
    <h2>Start a Random Exercise</h2>
    <%= link_to "Random Exercice", exercice_path(@never_tried.sample), class: 'btn btn-primary' %>
  </div>
  <div class="challenges">
    <h2>Challenges</h2>
    <p>Coming Soon</p>
  </div>
</div>
