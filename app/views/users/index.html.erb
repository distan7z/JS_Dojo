<script src="./assets/vendor/hs-table-sticky-header/src/hs.table-sticky-header.js"></script>

<div class="js-sticky-header">
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="thead-light">
        <tr>
          <th>Position</th>
          <th>Name</th>
          <th>Country</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td>
              <a href="<%= user_path(user) %>">
                <%= user.username %>
                  <i class="tio-verified text-primary" data-bs-toggle="tooltip" data-bs-placement="top" title="Top endorsed"></i>
              </a>
            </td>
            <td>
              <%= image_tag("flags/#{user.country.downcase}.png", style: "width: 32px;") %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
