<div class="row">
  <div class="col-md-4 ">
    <div class="card-instruction">
      <p>Instructions : <%= @exercice.instructions %></p>
      <p>user attempts: <%= @submission.attempts_count %></p>
    </div>

    <div class="card-instruction">
      <p>Details : <%= @exercice.details %></p>
      <p>XP: <%= @exercice.exp %></p>
      <p>[will be deleted -- for test purposes] <br> solution: <%= @exercice.solution %></p>
    </div>
  </div>

  <div class="col-md-8 ">
    <h2>Your solution</h2>
    <div>
      <%= simple_form_for [@exercice, @submission] do |f| %>
        <%= f.input :user_code, class: 'imput-color'%>
        <%= f.button :submit, 'Run', class: 'btn btn-success' %>
      <% end %>
    </div>

    <div>
      <h2>Output</h2>
      <div>
        <p>
          <%= @output %>
        </p>
      </div>
    </div>

    <div>
      <h2>Errors</h2>
      <div>
        <p>
          <%= @current_error %>
        </p>
      </div>
    </div>

  </div>
</div>
